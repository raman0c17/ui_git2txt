{
  "name": "git2txt",
  "version": "1.0.6",
  "description": "CLI tool to convert GitHub repositories to text files",
  "main": "index.js",
  "bin": {
    "git2txt": "./index.js"
  },
  "type": "module",
  "scripts": {
    "test": "chmod +x index.js && ava",
    "prepare": "chmod +x index.js",
    "postinstall": "chmod +x index.js"
  },
  "keywords": [
    "cli",
    "github",
    "text",
    "converter",
    "repository"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "degit": "^2.8.4",
    "filesize": "^10.1.0",
    "glob": "^10.3.10",
    "isbinaryfile": "^5.0.4",
    "meow": "^12.0.1",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "ava": "^5.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "index.js"
  ],
  "ava": {
    "files": [
      "test/**/*"
    ],
    "timeout": "2m",
    "nodeArguments": [
      "--experimental-modules",
      "--no-warnings"
    ]
  }
}
